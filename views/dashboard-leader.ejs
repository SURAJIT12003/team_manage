<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Team Leader Dashboard</title>
</head>
<body>
    <body>
        <div class="container mt-5">
            <h2>Welcome, Team  - <%= teamData.teamName %></h2>
    
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Update Project Progress</h5>
                            <a href="/update-progress" class="btn btn-primary">Update Progress</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">View Team Members</h5>
                            <ul class="list-group">
                                <% teamData.teamMembers.forEach(member => { %>
                                    <% if (member.position) { %>
                                        <li class="list-group-item">
                                            <strong>Name:</strong> <%= member.name %> - <strong>Position:</strong> <%= member.position %>
                                        </li>
                                    <% } %>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
